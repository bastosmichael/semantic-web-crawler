void Storage::checkForCacheFolder(){
	if(mkdir("cache",0777)==-1)//creating a directory
		{
		        cerr<<"Caching..." <<endl;
		}
}

void Storage::generateUrlHash(std::string url, Storage cache){
	locale loc;
	const collate<char>& coll = use_facet<collate<char> >(loc);
	long urlhash = coll.hash(url.data(),url.data()+url.length());
	std::string hash;
	std::stringstream strstream;
	strstream << urlhash;
	strstream >> hash;
	string path = "cache/" + hash;
	const char *p;
	p=path.c_str();
	cout << "Saving to " << p << " from " << url << " as " << hash << endl;
	cache.loadPage(p,url,hash);

}

void Storage::loadPage(const char *path, string url, string urlhash, Storage cache){
	//page.clear();
	string line;
	ifstream read (path);//reading a file
	if (read.is_open()) {
		while (! read.eof() ) {
			getline (read,line);
			page.push_back (line);
			cout<<line<<endl;
	    }
	    read.close();
	} else {
		Crawler Url;
		Url.downloadUrl(path,url,urlhash,cache);
	}
}

} /* namespace std */
